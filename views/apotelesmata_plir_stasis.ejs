<% include partials/header.ejs %>



<div class="container">


	<h4>Δρομολόγια που διέρχονται απο την στάση : <b> <%= stasi %> </b></h4>
	<br>

		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">ΛΕΟΦΩΡΕΙΟ</th>
					<th scope="col">ΑΦΕΤΗΡΙΑ</th>
					<th scope="col">ΤΕΡΜΑ</th>
					<th scope="col">ΕΠΟΜΕΝΟ ΣΕ</th>
				</tr>
			</thead>
			
			
			<tbody style="background-color: #F5F5DC;">
				<% dromologia.forEach(function(drom){ %>
					<tr>
						<td><%= drom.leoforeio %></td>
						<td><%= drom.afetiria %></td>
						<td><%= drom.terma %></td>
						<td><%= drom.epomeno %></td>
					</tr>
				 <% })  %>
			</tbody>
		</table>
		
		<br>
		
		
		<%= lng %>
		
		<%= lat %>
		Εδω επρεπε να εμφανιζει τον χαρτη
		
		<script src="http://www.openlayers.org/api/OpenLayers.js"></script>
		
		<script>
			map = new OpenLayers.Map("mapdiv");
			map.addLayer(new OpenLayers.Layer.OSM());
			
				var lonLat = new OpenLayers.LonLat( <%= lng %>,<%= lat %>)				// -0.1279688 ,51.5077286
					.transform(
						new OpenLayers.Projection("EPSG:4326"), 						// transform from WGS 1984
						map.getProjectionObject() 										// to Spherical Mercator Projection
					);
					  
			var zoom=15;
			var markers = new OpenLayers.Layer.Markers( "Markers" );
			map.addLayer(markers);
			markers.addMarker(new OpenLayers.Marker(lonLat));
			map.setCenter (lonLat, zoom);
		</script>
		
		

</div>



