<% include partials/header.ejs %>
<link rel="stylesheet" type="text/css" href="/login.css">


<div class="container">
		<h3 style="text-align: center; color: black; margin-top: 2%;"><strong> Επεξεργασία Στοιχείων Λογαριασμού </strong></h3>
		
		<div style="width: 30%; margin: 20px auto;">
			<form action = "/account" method = "POST">


			<div class="form-group">
				<label>Όνμα Χρήστη</label>
				<input class="form-control" type="text" name="username" placeholder = "Όνομα Χρήστη" value = "<%= currentUser.username %>">
			</div>
			
			<div class="form-group">
				<label>Όνομα</label>
				<input class="form-control" type="text" name="firstName" placeholder="Όνομα" value = "<%= currentUser.firstName %>" >
			</div>

			<div class="form-group">
				<label>Επώνυμο</label>
				<input class="form-control" type="text" name="lastName" placeholder="Επώνυμο" value = "<%= currentUser.lastName %>">
			</div>
			
			<div class="form-group">
				<label>Email</label>
				<input class="form-control" type="email" name="email" placeholder="Email" value = "<%= currentUser.email %>">
			</div>
			
			<div class="form-group">
				<label>Διεύθυνση</label>
				<input class="form-control" type="text" name="address" placeholder="Διεύθυνση" value = "<%= currentUser.address %>">
			</div>
			
			<div class="form-group">
				<label>Ταχυδρομικός Κώδικας</label>
				<input class="form-control" type="text" name="postal_code" placeholder="Ταχυδρομικός Κώδικας" value = "<%= currentUser.postal_code %>">
			</div>
			
			
			<div class="form-group">
				<label>Τηλέφωνο</label>
				<input class="form-control" type="number" name="phone" placeholder="Τηλέφωνο" value = "<%= currentUser.phone %>">
			</div>
			
			
			<div class="form-group">
				<label>Εικόνα Χρήστη</label>
				<input class="form-control" type="text" name="image" placeholder="Εικόνα Χρήστη (url)" value = "<%= currentUser.image %>">
			</div>


			<div class="form-group">
				<button class="btn btn-sm btn-success btn-default btn-block" >Αλλαγή στοιχείων</button>
			</div>

			</form>
			
			<a href="javascript:history.back()">Ακύρωση</a>
		</div>
</div>


<% include partials/footer.ejs %>